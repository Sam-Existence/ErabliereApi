<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  <PropertyGroup>
    <PackageId>ErabliereAPI.Proxy</PackageId>
    <Version>3.2.2</Version>
    <Authors>Frédéric Jacques</Authors>
    <Company>ErabliereAPI</Company>
    <PackageTags>ErabliereAPI;Erabliere</PackageTags>
    <Description>
      ErabliereAPI.Proxy is a proxy used to interact with ErabliereAPI. 
      The client class was generated by NSwagStudio and some code were
      added to handle AzureAD authentication scenario.
    </Description>
    <ReleaseNotes>
      - Security Patch .NET 8.0.1
	  - Migrating to .NET 8.0
      - Migrating to .NET 7.0
    </ReleaseNotes>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <ProjectUrl>https://github.com/freddycoder/ErabliereAPI</ProjectUrl>
    <Copyright>Copyright © ErabliereAPI 2022</Copyright>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Caching.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.1" />
  </ItemGroup>
</Project>